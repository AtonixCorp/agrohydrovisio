{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ]
    },
    "lib": [
      "dom",
      "esnext"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "bcend/models",
    "bcend/controllers"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}